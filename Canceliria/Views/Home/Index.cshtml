@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="styles.css"> <!-- Ваш файл стилей -->
    <title>@ViewData["Title"]</title>
    <style>
        .navigation-container {
            background-color: #e0f7fa; /* Светлый фон для навигации */
            border-radius: 10px; /* Скругление углов */
            padding: 20px; /* Отступы внутри контейнера */
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1); /* Тень для глубины */
            margin-top: 30px; /* Отступ сверху */
        }

        .navigation-title {
            margin-bottom: 15px; /* Отступ снизу заголовка */
            color: #00796b; /* Цвет заголовка */
        }
    </style>
</head>
<body>
    <div class="container text-center my-5">
        <h1 class="display-4 text-primary">Канцелярский магазин</h1>
        <img src="https://avatars.mds.yandex.net/get-altay/6065996/2a00000180045822e7bf478fb9cd4eb232b6/XXXL" alt="Картинка канцелярских товаров" class="custom-img"> <!-- Добавьте класс для стилизации -->
        <p class="lead text-muted">Добро пожаловать в наш магазин! Здесь вы найдете все необходимое для учебы и работы.</p>

        <p>
            <a class="btn btn-success btn-lg" href="https://learn.microsoft.com/aspnet/core" role="button">Узнать больше</a>
        </p>

        <div class="navigation-container">
            <h2 class="navigation-title">Навигация</h2>
            <div class="btn-group-vertical">
                <a class="btn btn-outline-primary" href="/products">Товары</a>
                <a class="btn btn-outline-primary" asp-action="Privacy">Безопасность</a>
                <a class="btn btn-outline-primary" href="/Categories">Категории</a>
            </div>
        </div>
    </div>
</body>
</html>
